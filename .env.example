# ============================
# Docker Compose Configuration
# ============================

# Ports
APP_PORT=8080
POSTGRES_PORT=5433
MINIO_PORT=9000

# =========================
# Application Configuration
# =========================

BASE_URL=http://localhost:8080

# Storage: "s3", "local", or "both"
STORAGE_TYPE=both

# S3/MinIO Configuration
S3_REGION=us-east-1
S3_BUCKET=sono-apks

# ========
# Security
# ========

# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=change-to-a-secure-secret

# ========================
# PostgreSQL Configuration
# ========================

POSTGRES_USER=sono
POSTGRES_PASSWORD=sono
POSTGRES_DB=sono_versions

# ===================
# MinIO Configuration
# ===================

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin